#!/bin/bash
mem=`free | awk 'NR==2 {printf("%.1f",$3/1024/1024)}'`
if [[ $mem < 3 ]]; then
	echo ðŸ˜†${mem}G
elif [[ $mem < 6 ]]; then
	echo ðŸ˜„${mem}G
elif [[ $mem < 9 ]]; then
	echo ðŸ˜¬${mem}G
elif [[ $mem < 12 ]]; then
	echo ðŸ˜ ${mem}G
elif [[ $mem < 16 ]]; then
	echo ðŸ˜¡${mem}G
fi
["$1" == ""] && exit
case $1 in
	1) exec "st" -i -g float -e "htop" "-t";;
	2) ;;
	3) "st" -e "nvim" "$0";;
esac
